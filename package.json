{
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "diff": ">=8.0.3"
    }
  },
  "scripts": {
    "start": "npm run start:firefox",
    "build": "npm run build:firefox",
    "start:firefox": "concurrently -k -n webpack,web-ext -c blue,green \"BROWSER=firefox NODE_ENV=development webpack --progress --watch\" \"web-ext run -s dist/\"",
    "start:chrome": "concurrently -k -n webpack,web-ext -c blue,green \"BROWSER=chrome NODE_ENV=development webpack --progress --watch\" \"web-ext run -s dist/ -t chromium\"",
    "build:firefox": "BROWSER=firefox NODE_ENV=production webpack && npm run lint:web-ext",
    "build:chrome": "BROWSER=chrome NODE_ENV=production webpack && npm run lint:web-ext",
    "lint:web-ext": "web-ext lint -s dist/",
    "lint:eslint": "eslint 'src/**'",
    "zip:firefox": "npm run build:firefox && web-ext build -s ./dist --overwrite-dest",
    "test": "nyc mocha",
    "test:coverage": "nyc report --reporter=html",
    "test:e2e": "wdio run wdio.conf.js",
    "test:e2e:headed": "HEADLESS=false wdio run wdio.conf.js",
    "test:all": "npm run build:firefox && npm test && npm run test:e2e",
    "version": "node scripts/version.js"
  },
  "dependencies": {
    "debounce": "^2.2.0",
    "fast-deep-equal": "^3.1.3",
    "fuse.js": "^7.1.0",
    "redux": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-webext": "^1.1.2",
    "rgb": "^0.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.0",
    "@eslint/js": "^9.18.0",
    "@wdio/cli": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "babel-loader": "^9.2.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "chai": "^4.5.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-object-loader": "^0.0.7",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "fs-extra": "^11.2.0",
    "geckodriver": "^6.1.0",
    "globals": "^15.14.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^26.0.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "sinon": "^19.0.0",
    "svg-url-loader": "^8.0.0",
    "wdio-geckodriver-service": "^5.0.2",
    "web-ext": "^9.2.0",
    "webpack": "^5.97.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-shell-plugin-next": "^2.3.3"
  }
}
