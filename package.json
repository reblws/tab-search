{
  "scripts": {
    "start": "npm run start:firefox",
    "start:firefox": "webpack --env.targetBrowser=firefox --env.nodeEnv=development --progress --colors --watch",
    "start:chrome": "webpack --env.targetBrowser=chrome --env.nodeEnv=development --progress --colors --watch",
    "build:firefox": "webpack --env.targetBrowser=firefox --env.nodeEnv=production && web-ext lint dist/",
    "build:chrome": "webpack --env.targetBrowser=chrome --env.nodeEnv=production && web-ext lint dist/",
    "eslint": "eslint 'src/**'",
    "zip:firefox": "npm run build:firefox && web-ext build -s ./dist --overwrite-dest",
    "watch:firefox": "webpack --env.targetBrowser=firefox --env.nodeEnv=production"
  },
  "dependencies": {
    "debounce": "^1.0.2",
    "fuse.js": "^3.0.5",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.0.0-rc.6",
    "redux-thunk": "^2.2.0",
    "redux-webext": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^4.2.0",
    "eslint-config": "^0.3.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "fs-extra": "^4.0.2",
    "uglifyjs-webpack-plugin": "^1.0.0-rc.0",
    "web-ext": "^1.10.1",
    "webpack": "^3.3.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-shell-plugin": "^0.5.0"
  }
}
