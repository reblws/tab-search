{
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "diff": ">=8.0.3"
    }
  },
  "scripts": {
    "start": "npm run start:firefox",
    "build": "npm run build:firefox",
    "watch": "npm run watch:firefox",
    "start:firefox": "BROWSER=firefox NODE_ENV=development webpack --progress --watch",
    "start:chrome": "BROWSER=chrome NODE_ENV=development webpack --progress --watch",
    "build:firefox": "BROWSER=firefox NODE_ENV=production webpack && npm run lint:web-ext",
    "build:chrome": "BROWSER=chrome NODE_ENV=production webpack && npm run lint:web-ext",
    "lint:web-ext": "web-ext lint -s dist/",
    "lint:eslint": "eslint 'src/**'",
    "zip:firefox": "npm run build:firefox && web-ext build -s ./dist --overwrite-dest",
    "watch:firefox": "web-ext run -s dist/",
    "test": "mocha --require @babel/register --require ./test/setup.js src/**/*.spec.js",
    "format": "prettier --write 'src/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js'"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "fuse.js": "^7.1.0",
    "redux": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-webext": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.0",
    "babel-loader": "^9.2.1",
    "chai": "^4.5.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-object-loader": "^0.0.7",
    "eslint": "^9.18.0",
    "@eslint/js": "^9.18.0",
    "globals": "^15.14.0",
    "eslint-plugin-import": "^2.31.0",
    "fs-extra": "^11.2.0",
    "mocha": "^11.1.0",
    "prettier": "^3.4.0",
    "web-ext": "^9.2.0",
    "webpack": "^5.97.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-shell-plugin-next": "^2.3.3"
  }
}
